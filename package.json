{
  "name": "account-service",
  "version": "0.0.1",
  "description": "Service for managing user accounts.",
  "author": "Victor Nwokeocha",
  "license": "ISC",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "./node_modules/.bin/eslint 'src/**' --fix",
    "test": "NODE_ENV=test jest --verbose -i",
    "test:watch": "NODE_ENV=test jest --watch --verbose",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --verbose",
    "pretypeorm": "(rimraf ormconfig.json || :) && ts-node -r tsconfig-paths/register src/scripts/writeOrmConfig.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "src/**/*.{ts, js}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/jwt": "^6.1.2",
    "@nestjs/microservices": "^6.11.11",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^4.3.2",
    "@nestjs/typeorm": "^6.3.3",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.2",
    "dotenv": "^8.2.0",
    "js-yaml": "^3.13.1",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.3",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.14.2",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.11",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.3",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^24.0.18",
    "@types/js-yaml": "^3.12.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.12.29",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/passport-jwt": "^3.0.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "node-mocks-http": "^1.8.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-defocus": "^2.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-rxjs-subject-restrictions-rule": "^1.0.4",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*",
      "!src/main.ts",
      "!src/migration/*",
      "!src/scripts/*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
